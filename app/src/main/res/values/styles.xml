<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="MyTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">true</item>
		<item name="android:textCursorDrawable">@null</item>
		<item name="android:textColor">@color/colorTextPrimary</item>
		<!--item name="android:textSize">@android:style/TextAppearance.Small</item-->
		<item name="android:textSize">14sp</item>
	</style>

	<style name="MyTextViewSecondary" parent="MyTextView">
		<item name="android:textColor">@color/colorTextSecondary</item>
	</style>

	<style name="GridTextView" parent="MyTextView">
		<item name="android:layout_gravity">fill_horizontal</item>
	</style>

	<style name="GridTextViewBordered" parent="GridTextView">
		<item name="android:padding">12dp</item>
		<item name="android:background">@drawable/bordered_background</item>
	</style>

	<style name="MySpinner" parent="MyTextView">
		<item name="android:popupBackground">@color/colorSecondary</item>
	</style>

	<style name="GridSpinner" parent="MySpinner">
		<item name="android:layout_gravity">fill_horizontal</item>
	</style>

	<style name="MySpinnerTextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/colorTextPrimary</item>
		<!--item name="android:textSize">@android:style/TextAppearance.Small</item-->
		<item name="android:textSize">14sp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingStart">0sp</item>
		<item name="android:paddingEnd">0sp</item>
	</style>

	<style name="MyButton" parent="MyTextView">
	</style>

	<style name="MyToggleButton" parent="MyButton">
	</style>

</resources>
